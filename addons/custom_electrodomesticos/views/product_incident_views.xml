<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para product.incident -->
        <record id="product_incident_form_view" model="ir.ui.view">
            <field name="name">product.incident.form</field>
            <field name="model">product.incident</field>
            <field name="arch" type="xml">
                <form string="Incidencia de Producto">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_tmpl_id"/>
                                <field name="fecha"/>
                                <field name="tipo"/>
                                <field name="cliente_id"/>
                            </group>
                            <group>
                                <field name="importe"/>
                                <field name="impuesto"/>
                                <field name="total"/>
                                <field name="abono"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Motivo" name="motivo">
                                <field name="motivo" nolabel="1" placeholder="Describa el motivo de la incidencia..."/>
                            </page>
                            <page string="Notas" name="notas">
                                <field name="notas" nolabel="1" placeholder="Notas adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de árbol para product.incident -->
        <record id="product_incident_tree_view" model="ir.ui.view">
            <field name="name">product.incident.tree</field>
            <field name="model">product.incident</field>
            <field name="arch" type="xml">
                <tree string="Incidencias de Productos" decoration-danger="tipo=='roto'" decoration-warning="tipo=='devuelto'" decoration-info="tipo=='reclamacion'">
                    <field name="name"/>
                    <field name="product_tmpl_id"/>
                    <field name="fecha"/>
                    <field name="tipo"/>
                    <field name="cliente_id"/>
                    <field name="total" sum="Total"/>
                    <field name="abono" sum="Total Abonos"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Vista de búsqueda para product.incident -->
        <record id="product_incident_search_view" model="ir.ui.view">
            <field name="name">product.incident.search</field>
            <field name="model">product.incident</field>
            <field name="arch" type="xml">
                <search string="Buscar Incidencias">
                    <field name="name"/>
                    <field name="product_tmpl_id"/>
                    <field name="cliente_id"/>
                    <field name="motivo"/>
                    <filter string="Rotos" name="roto" domain="[('tipo', '=', 'roto')]"/>
                    <filter string="Devoluciones" name="devuelto" domain="[('tipo', '=', 'devuelto')]"/>
                    <filter string="Reclamaciones" name="reclamacion" domain="[('tipo', '=', 'reclamacion')]"/>
                    <separator/>
                    <filter string="Borrador" name="borrador" domain="[('state', '=', 'borrador')]"/>
                    <filter string="Confirmado" name="confirmado" domain="[('state', '=', 'confirmado')]"/>
                    <filter string="Procesado" name="procesado" domain="[('state', '=', 'procesado')]"/>
                    <filter string="Cerrado" name="cerrado" domain="[('state', '=', 'cerrado')]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Producto" name="product" context="{'group_by': 'product_tmpl_id'}"/>
                        <filter string="Tipo" name="tipo" context="{'group_by': 'tipo'}"/>
                        <filter string="Cliente" name="cliente" context="{'group_by': 'cliente_id'}"/>
                        <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Fecha" name="fecha" context="{'group_by': 'fecha'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Acción para product.incident -->
        <record id="action_product_incident" model="ir.actions.act_window">
            <field name="name">Incidencias de Productos</field>
            <field name="res_model">product.incident</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="product_incident_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registre su primera incidencia de producto
                </p>
                <p>
                    Las incidencias de productos le permiten registrar problemas como roturas, devoluciones o reclamaciones.
                </p>
            </field>
        </record>
    </data>
</odoo>