<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario extendida para product.template -->
        <record id="product_template_form_view_custom" model="ir.ui.view">
            <field name="name">product.template.form.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Añadir pestaña de Información Personalizada -->
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Información Personalizada" name="custom_info">
                        <group>
                            <group string="Información del Proveedor">
                                <field name="x_codigo_proveedor"/>
                                <field name="x_marca"/>
                                <field name="x_modelo"/>
                            </group>
                            <group string="Información Comercial">
                                <field name="x_margen"/>
                                <field name="x_pvp_web"/>
                                <field name="x_beneficio_unitario" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Stock y Ventas">
                                <field name="x_vendidas" readonly="1"/>
                                <field name="x_quedan_tienda"/>
                                <field name="x_estado_producto"/>
                            </group>
                            <group string="Notas">
                                <field name="x_notas" nolabel="1" placeholder="Información adicional sobre el producto..."/>
                                <field name="x_notas_importacion" nolabel="1" placeholder="Notas de importación..."/>
                            </group>
                        </group>
                    </page>
                </xpath>
                
                <!-- Añadir pestaña de Incidencias -->
                <xpath expr="//page[@name='custom_info']" position="after">
                    <page string="Incidencias" name="incidencias">
                        <field name="x_incidencias">
                            <tree>
                                <field name="name"/>
                                <field name="fecha"/>
                                <field name="tipo"/>
                                <field name="motivo"/>
                                <field name="cliente_id"/>
                                <field name="total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                
                <!-- Añadir pestaña de Historial de Ventas -->
                <xpath expr="//page[@name='incidencias']" position="after">
                    <page string="Historial de Ventas" name="sales_history">
                        <field name="x_historico_ventas">
                            <tree>
                                <field name="name"/>
                                <field name="fecha"/>
                                <field name="cantidad"/>
                                <field name="precio_unitario"/>
                                <field name="total"/>
                                <field name="cliente_id"/>
                                <field name="factura_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
        <!-- Vista de lista extendida para mostrar estado del producto -->
        <record id="product_template_tree_view_custom" model="ir.ui.view">
            <field name="name">product.template.tree.custom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="x_estado_producto" optional="show"/>
                    <field name="x_vendidas" optional="hide"/>
                    <field name="x_quedan_tienda" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>